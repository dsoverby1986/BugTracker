    <!-- /.col-lg-12 -->
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-list fa-fw"></i> @Html.DisplayFor(model => model.Title) <span class="separator-o">|</span>
        <span>Created: @Html.DisplayFor(model => model.Created)</span> <span class="separator-o">|</span>
        @if (Model.Updated != null)
        {
            <span>Updated: @Html.DisplayFor(model => model.Updated)</span><span class="separator-o">|</span>
        }
        <span>Project: @Html.DisplayFor(model => model.Project.Name)</span>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <p>
            @Html.DisplayFor(model => model.Description)
        </p>
    </div>
    <!-- /.panel-body -->
</div>


