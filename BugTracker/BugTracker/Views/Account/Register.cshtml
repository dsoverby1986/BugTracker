@{Layout = null;}
@model BugTracker.Models.RegisterViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Bootstrap Admin Theme</title>
    <link href="~/Content/Bootstrap_SB_Admin2/bootstrap.min.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="~/Content/Bootstrap_SB_Admin2/metisMenu.min.css" rel="stylesheet" />
    <!-- Timeline CSS -->
    <link href="~/Content/Bootstrap_SB_Admin2/timeline.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/Bootstrap_SB_Admin2/sb-admin-2.css" rel="stylesheet" />
    <!-- Morris Charts CSS -->
    <link href="~/Content/Bootstrap_SB_Admin2/morris.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/fonts/Bootstrap_SB_Admin2/font-awesome.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <h2>@ViewBag.Title.</h2>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Create A New Account</h3>
                    </div>
                    <div class="panel-body">
                        <!--<form role="form">-->
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))<!-- class="form-horizontal" - - - this was the class used in the forms in the solid bootstrap template-->
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Display Name" name="displayName" type="text" />
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Confirm Password" name="confirmPassword" type="password" value="" />
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Register" />
                            </fieldset>
                        }
                        <!--</form>-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- jQuery -->
    <script src="~/Scripts/Bootstrap_SB_Admin2/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/Bootstrap_SB_Admin2/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Scripts/Bootstrap_SB_Admin2/metisMenu.min.js"></script>
    <!-- Morris Charts JavaScript -->
    <script src="~/Scripts/Bootstrap_SB_Admin2/raphael-min.js"></script>
    <script src="~/Scripts/Bootstrap_SB_Admin2/morris.min.js"></script>
    <script src="~/Scripts/Bootstrap_SB_Admin2/morris-data.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/Bootstrap_SB_Admin2/sb-admin-2.js"></script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>